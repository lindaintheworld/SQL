-- 워크북 DML

--1.
INSERT INTO TB_CLASS_TYPE
VALUES('01', '전공필수');

INSERT INTO TB_CLASS_TYPE
VALUES('02', '전공선택');

INSERT INTO TB_CLASS_TYPE
VALUES('03', '교양필수');

INSERT INTO TB_CLASS_TYPE
VALUES('04', '교양선택');

INSERT INTO TB_CLASS_TYPE
VALUES('05', '논문지도');

ALTER TABLE TB_CLASS_TYPE
RENAME COLUMN 번호 TO CLASS_NO;

ALTER TABLE TB_CLASS_TYPE
RENAME COLUMN 유형이름 TO CLASS_NAME;

SELECT CLASS_NO || ',' "번호,", CLASS_NAME 유형이름
FROM TB_CLASS_TYPE;

--2.
CREATE TABLE TB_학생일반정보
AS
SELECT STUDENT_NO 학번, STUDENT_NAME 학생이름, STUDENT_ADDRESS 주소
FROM TB_STUDENT;

SELECT * FROM TB_학생일반정보;

--3.
CREATE TABLE TB_국어국문학과
AS
SELECT STUDENT_NO 학번, STUDENT_NAME 학생이름, SUBSTR(STUDENT_SSN, 1, 4) 출생년도, PROFESSOR_NAME 교수이름
FROM TB_STUDENT
LEFT JOIN TB_PROFESSOR ON (COACH_PROFESSOR_NO = PROFESSOR_NO);

SELECT * FROM TB_국어국문학과;

--4.
UPDATE TB_DEPARTMENT
SET CAPACITY = ROUND(CAPACITY * 1.1, 0);

SELECT CAPACITY FROM TB_DEPARTMENT;

ROLLBACK;

--5.
UPDATE TB_STUDENT
SET STUDENT_ADDRESS = '서울시 종로구 숭인동 181-21'
WHERE STUDENT_NO = 'A413042';

SELECT * FROM TB_STUDENT
WHERE STUDENT_NAME = '박건우';

ROLLBACK;

--6.
UPDATE TB_STUDENT
SET STUDENT_SSN = SUBSTR(STUDENT_SSN, 1, 6);

ROLLBACK;

SELECT * FROM TB_STUDENT;

--7.
UPDATE TB_GRADE
SET POINT = '3.5'
WHERE STUDENT_NO IN (SELECT STUDENT_NO
                                FROM TB_STUDENT
                                JOIN TB_DEPARTMENT USING (DEPARTMENT_NO)
                                WHERE STUDENT_NAME = '김명훈'
                                AND DEPARTMENT_NAME = '의학과')                             
AND TERM_NO = '200501';     

SELECT POINT, STUDENT_NAME, TERM_NO
FROM TB_GRADE
JOIN TB_STUDENT USING (STUDENT_NO)
JOIN TB_DEPARTMENT USING (DEPARTMENT_NO)
WHERE STUDENT_NAME = '김명훈'
AND DEPARTMENT_NAME = '의학과';

ROLLBACK;

--8.
DELETE FROM TB_GRADE
WHERE STUDENT_NO IN (SELECT STUDENT_NO
                                FROM TB_STUDENT
                                WHERE ABSENCE_YN = 'Y');
                                
ROLLBACK;
